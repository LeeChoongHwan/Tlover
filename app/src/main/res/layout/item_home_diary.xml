<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/tlover_background_color"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/item_home_diary_yeartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/notosans"
            android:text="1년"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_home_diary_daytextNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/notosans"
            android:text="365"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="@id/item_home_diary_yeartext"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_home_diary_dateNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/notosans"
            android:text="일차"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/item_home_diary_yeartext"
            app:layout_constraintTop_toBottomOf="@id/item_home_diary_yeartext" />

        <ImageView
            android:id="@+id/item_home_diary_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_home_diary_dateNum"
            app:srcCompat="@drawable/diary_rectangle" />

        <TextView
            android:id="@+id/item_home_diary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/notosans"
            android:text="title"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/item_home_diary_rectangle"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/item_home_diary_calander_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/item_home_diary_title"
            app:layout_constraintTop_toBottomOf="@id/item_home_diary_title"
            app:srcCompat="@drawable/diary_calander_img" />

        <ImageView
            android:id="@+id/item_home_diary_location_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="@id/item_home_diary_calander_img"
            app:layout_constraintTop_toBottomOf="@id/item_home_diary_calander_img"
            app:srcCompat="@drawable/diary_location_img" />

        <ImageView
            android:id="@+id/item_home_diary_coin_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="@id/item_home_diary_location_img"
            app:layout_constraintTop_toBottomOf="@id/item_home_diary_location_img"
            app:srcCompat="@drawable/diary_coin_img" />

        <ImageView
            android:id="@+id/item_home_diary_bed_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="@id/item_home_diary_coin_img"
            app:layout_constraintTop_toBottomOf="@id/item_home_diary_coin_img"
            app:srcCompat="@drawable/diary_bed_img" />

        <TextView
            android:id="@+id/item_home_diary_calander_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/notosans"
            android:text="2022.04.08 - 2022.04.12"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/item_home_diary_calander_img"
            app:layout_constraintLeft_toRightOf="@id/item_home_diary_calander_img"
            app:layout_constraintTop_toTopOf="@id/item_home_diary_calander_img" />

        <TextView
            android:id="@+id/item_home_diary_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/notosans"
            android:text="Aglaeside"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/item_home_diary_location_img"
            app:layout_constraintLeft_toRightOf="@id/item_home_diary_location_img"
            app:layout_constraintTop_toTopOf="@id/item_home_diary_location_img" />

        <TextView
            android:id="@+id/item_home_diary_coin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/notosans"
            android:text="50,000"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/item_home_diary_coin_img"
            app:layout_constraintLeft_toRightOf="@id/item_home_diary_coin_img"
            app:layout_constraintTop_toTopOf="@id/item_home_diary_coin_img" />

        <TextView
            android:id="@+id/item_home_diary_bed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/notosans"
            android:text="21956 Moore Squares"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/item_home_diary_bed_img"
            app:layout_constraintLeft_toRightOf="@id/item_home_diary_bed_img"
            app:layout_constraintTop_toTopOf="@id/item_home_diary_bed_img" />

        <TextView
            android:id="@+id/item_home_diary_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/notosans"
            android:text="nickname1 / nickname2 외 3명"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@id/item_home_diary_bed_img"
            app:layout_constraintTop_toBottomOf="@id/item_home_diary_bed_img" />

        <TextView
            android:id="@+id/item_home_diary_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/notosans"
            android:text="Content"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/item_home_diary_dateNum"
            app:layout_constraintTop_toBottomOf="@id/item_home_diary_nickname" />

        <ImageView
            android:id="@+id/item_home_diary_down_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="17dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_home_diary_content_text"
            app:srcCompat="@drawable/diary_down_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>