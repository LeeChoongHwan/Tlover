<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFCF6"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cookandroid.teamproject1.SignInActivity"
    >



    <TextView
        android:id="@+id/signin_pw_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="38dp"
        android:text="비밀번호"
        android:fontFamily="@font/notosans"
        android:textColor="#3F3F45"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_id"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/signin_pwnot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="비밀번호가 일치하지 않습니다."
        android:textAlignment="center"
        android:textColor="#F92636"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_pw"/>

    <ImageView
        android:id="@+id/signin_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_in_join_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/title_bi" />


    <TextView
        android:id="@+id/signin_tlover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/cocogoose"
        android:text="TLOVER"
        android:textColor="@color/tlover_main_color"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_logo"/>

    <EditText
        android:id="@+id/signin_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:background="@drawable/phone_requ"
        android:textFontWeight="500"
        android:ems="10"
        android:fontFamily="@font/notosans"
        android:hint="아이디를 입력하세요"
        android:inputType="textPersonName"
        android:maxLength="18"
        android:paddingLeft="12dp"
        android:paddingVertical="4dp"
        android:textColorHint="@color/join_text_gray_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_id_up" />

    <EditText
        android:id="@+id/signin_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        android:paddingLeft="12dp"
        android:paddingVertical="4dp"
        android:textFontWeight="500"
        android:layout_weight="1"
        android:background="@drawable/phone_requ"
        android:ems="10"
        android:fontFamily="@font/notosans"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColorHint="@color/join_text_gray_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_pw_up"/>

    <Button
        android:id="@+id/signin_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:background="@drawable/certification_requ"
        android:enabled="false"
        android:fontFamily="@font/notosans"
        android:text="로그인 하기"
        android:textColor="#6E6E76"
        android:paddingVertical="1dp"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_pw"/>

    <TextView
        android:id="@+id/signin_findid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="해당 아이디를 찾을 수 없습니다."
        android:textAlignment="center"
        android:textColor="#F92636"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_id"/>

    <TextView
        android:id="@+id/signin_id_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/notosans"
        android:text="아이디"
        android:textColor="#3F3F45"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_tlover" />

    <TextView
        android:id="@+id/sign_in_join_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textFontWeight="700"
        android:fontFamily="@font/notosans"
        android:text="로그인"
        android:textColor="#2E2E33"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/sign_in_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18.5dp"
        android:layout_marginTop="43.5dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>