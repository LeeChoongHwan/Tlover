<!-- Background-->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#6E6E76"/>
            <solid android:color="@color/white"/>
            <corners
                android:radius="4dp"/>
        </shape>

    </item>
</layer-list>